---
//hardcode
//? https://github.com/withastro/starlight/issues/860
const PAGE_TITLE_ID = "_top";

import type { Props } from "@astrojs/starlight/props"

import IconHashtag from "../assets/icon/hashtag.astro"

import IconCheck from "../assets/icon/check.astro"
import IconCross from "../assets/icon/cross.astro"

const status = Astro.props.entry.data.misc == null ? null : Astro.props.entry.data.misc.status;
---

<h1 id={PAGE_TITLE_ID}>{Astro.props.entry.data.title}</h1>
<div class="under-title">
  {
    Astro.props.entry.data.misc != null &&
    <div class="under-title-content status" style="font-size:1.2em">
      { status === "fixed" && (<IconCheck style="color:#3DCC40;height:1.4em;width:1.4em"/><span>Fixed</span>)}
      { status === "wontfix" && (<IconCross style="color:#CC423D;height:1.4em;width:1.4em" /><span>Won't Fix</span>)}
      { status === "invalid" && <span>invalid</span>}
    </div>
    <div class="under-title-content" style="font-size:1.2em">
      <IconHashtag />{Astro.props.entry.data.misc.tag}
    </div>
  }


</div>

<style>
  h1 {
    margin-top: 1rem;
    font-size: var(--sl-text-h1);
    line-height: var(--sl-line-height-headings);
    font-weight: 600;
    color: var(--sl-color-white);
  }
  .m-0 {
    margin: 0px
  }
  .under-title {
    margin-top: 1em;
  }
  .under-title-content {
    display:inline-flex;
    align-items: center;
    padding: 0 8px 0 3px
  }
  .status {
    background: var(--sl-color-gray-6);
    border-radius: 5px;
  }
</style>